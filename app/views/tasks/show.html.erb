<h1><%= @task.title %> </h1>
<%= link_to 'Edit task', edit_task_path(@task) %>
<p><%= @task.details %></p>
<p>
  <input type="checkbox" name="completed" value="<%= @task.completed %>" <%= 'checked' if @task.completed %>>
  <%= @task.completed ? "This task is completed" : "This task is not completed yet"%>
</p>
<%= link_to "Back to list", tasks_path  %>